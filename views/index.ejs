<html lang="en">
<%- include('./partials/head.ejs') %>

<body>
  <%- include('./partials/header.ejs') %>

  <main>
    <h1>Welcome to My Blog</h1>
    <p class="x">Here you'll find articles about my learning journey</p>
    <br><br>
    
    <h2>Recent blogs</h2>

    <% if (blogs.length > 0) {%>
      <% blogs.forEach( blog => {%>
        <a href="/blogs/<%= blog._id %>">
          <h2> <%= blog.title %></h2>
        </a>
          <p> <%= blog.snippet %></p>
      <% }) %>
    <%} else { %>
      <p>Wait for coming blogs</p>
    <% } %>
  </main>

  <%- include('./partials/footer.ejs') %>

</body>
</html>

