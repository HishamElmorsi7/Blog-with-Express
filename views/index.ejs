<html lang="en">
<%- include('./partials/head.ejs') %>

<body>
  <%- include('./partials/header.ejs') %>

  <main>
    <h1>Welcome to My Blog</h1>
    <p>Here you'll find articles about my learning journey</p>
    <h2>Recent Posts</h2>

    <% if (posts.length > 0) {%>
    <ul>
      <% posts.forEach( post => {%>
      <li>
        <h2> <%= post.title %></h2>
        <p> <%= post.snippet %></p>
      </li>
      <% }) %>
    </ul>
    <%} else { %>
      <p>Wait for coming posts</p>
    <% } %>
  </main>

  <%- include('./partials/footer.ejs') %>

</body>
</html>

